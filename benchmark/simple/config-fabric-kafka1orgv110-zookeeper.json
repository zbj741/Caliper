{
  "blockchain": {
    "type": "fabric",
    "config": "benchmark/simple/fabric-kafka1orgv110.json"
  },
  "command" : {
    "start": "docker-compose -f network/fabric/kafka1orgv110/docker-compose-kafka.yaml up -d;sleep 15",
    "end" : "docker-compose -f network/fabric/kafka1orgv110/docker-compose-kafka.yaml down;docker rm $(docker ps -aq);docker rmi $(docker images dev* -q)"
  },
  "test": {
    "clients": {
      "type": "zookeeper",
      "zoo" : {
        "server": "localhost:1026",
        "clientsPerHost": 5
      }
    },
    "rounds": [{
        "label" : "open",
        "txNumber" : [5000, 5000, 5000],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 100}}, {"type": "fixed-rate", "opts": {"tps" : 200}}, {"type": "fixed-rate", "opts": {"tps" : 300}}],
        "arguments": {  "money": 10000 },
        "callback" : "benchmark/simple/open.js"
      },
      {
        "label" : "query",
        "txNumber" : [5000, 5000],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 300}}, {"type": "fixed-rate", "opts": {"tps" : 400}}],
        "callback" : "benchmark/simple/query.js"
      }]
  },
  "monitor": {
    "type": ["docker", "process"],
    "docker":{
      "name": ["all"]
    },
    "process": [
      {
        "command" : "node",
        "arguments" : "local-client.js",
        "multiOutput" : "avg"
      }
    ],
    "interval": 1
  }
}